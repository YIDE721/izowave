{
  "compilerOptions": {
    "outDir": "./app",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "~entity/*": ["./src/game/scenes/world/entities/*"],
      "~scene/*": ["./src/game/scenes/*"],
      "~game/*": ["./src/game/*"],
      "~game": ["./src/game"],
      "~type/*": ["./src/types/*"],
      "~const/*": ["./src/const/*"],
      "~lib/*": ["./src/lib/*"]
    }
  }
}