{
  "compilerOptions": {
    "outDir": "./app",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "~entity/*": ["./src/scenes/world/entities/*"],
      "~scene/*": ["./src/scenes/*"],
      "~type/*": ["./src/types/*"],
      "~const/*": ["./src/const/*"],
      "~lib/*": ["./src/lib/*"],
      "~ui/*": ["./src/ui/*"]
    }
  },
  "include": ["./src"]
}