{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-len": ["error", { "code": 128 }],
    "import/extensions": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "no-new": "off",
    "no-console": "off",
    "no-restricted-syntax": "off",
    "no-restricted-exports": "off"
  }
}